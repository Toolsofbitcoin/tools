{
    "name": "cryptographytube/telegram-bot",
    "description": "CryptographyTube Telegram Bot - PHP Implementation",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-bcmath": "*",
        "ext-mbstring": "*",
        "google/protobuf": "^3.21",
        "bitwasp/bitcoin": "^1.0",
        "bitwasp/bech32": "^0.0.1",
        "kornrunner/keccak": "^1.0",
        "simplito/elliptic-php": "^1.0",
        "telegram-bot/api": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "CryptographyTube\\": "src/"
        }
    },
    "config": {
        "platform-check": false
    },
    "scripts": {
        "post-install-cmd": [
            "chmod 666 users.json || true",
            "chmod 666 error.log || true"
        ]
    }
}